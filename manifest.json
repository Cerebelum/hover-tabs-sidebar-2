{
  "manifest_version": 3,
  "name": "Hover Tabs Sidebar",
  "description": "Боковая панель с вкладками при наведении на край экрана.",
  "version": "1.2.0",
  "permissions": ["tabs", "storage", "favicon"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles/sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Hover Tabs Sidebar"
  }
}
